{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@axl-demo/scripts/deploy-contracts": [
        "libs/scripts/deploy-contracts/src/index.ts"
      ],
      "@axl-demo/types/contracts": ["libs/types/contracts/src/index.ts"],
      "@axl-demo/ui/card": ["libs/ui/card/src/index.ts"],
      "@axl-demo/ui/layout/layout": ["libs/ui/layout/layout/src/index.ts"],
      "@axl-demo/ui/layout/navbar": ["libs/ui/layout/navbar/src/index.ts"],
      "@axl-demo/ui/theme-toggle": ["libs/ui/theme-toggle/src/index.ts"],
      "@axl-demo/utils/constants": ["libs/utils/constants/src/index.ts"],
      "@axl-demo/utils/helpers": ["libs/utils/helpers/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
